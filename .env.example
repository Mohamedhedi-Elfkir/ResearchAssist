# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Vector Store
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50

# Agent Configuration
MAX_ITERATIONS=3
RETRIEVAL_TOP_K=5
RELEVANCE_THRESHOLD=7.0

# LLM Configuration
GEMINI_MODEL=gemini-1.5-flash-latest
TEMPERATURE=0.7
MAX_TOKENS=8192

# Web Scraping
USER_AGENT=ResearchAgent/1.0
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log
